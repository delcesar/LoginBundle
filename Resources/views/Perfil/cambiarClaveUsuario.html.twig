{% extends "::base.html.twig" %}



{% block header %}
    {{ include('LoginBundle:Perfil:headerPerfil.html.twig') }}
{% endblock %}

{% block sidebar %}
    <div id="sidebar" class="page-sidebar menu-compact">
        <ul class="nav sidebar-menu">
            {# inicio #}
            <li>
                <a href="{{path('login_perfil_usuario')}}">
                    <i class="menu-icon mdi-account"></i>
                </a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block cuerpo %}
    <div class="container-fluid" id="login-container">
        <div class="row">
            <div class="col-xl-10 col-xl-offset-1 col-xs-12">
                <div class="card card-primary margintop50">
                    <div class="card-block white p-a-0">
                        <div class="row flex">
                            <div class="col-xs-4 blue flex-item" style="background-image:url('/assets/img/fondos/business.png');background-size: cover">
                                <div class="valign-wrapper text-center">
                                    <div class="valign w100">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-8 flex-item">
                                <div class="row">
                                    <div class="col-xs-10 col-xs-offset-1">
                                        <div class="m-t-5">
                                            <h1 class="h2 semibold m-a-0">Cambiar clave</h1>
                                        </div>
                                        <div class="m-t-1">
                                            <span class="">Registra una nueva clave para tu usuario de, por lo menos, 8 caracteres</span>
                                        </div>
                                        <div class="m-t-5 m-b-3">
                                            <div class="row">
                                                <form role="form" id="login-form" action="#" class="col-xl-8 col-xs-10">
                                                    <div class="form-group">
                                                        <label for="password">Clave actual</label>
                                                        <div class="input-group margin-bottom-sm">
                                                            <span class="input-group-addon"><i class="mdi mdi-lock"></i></span>
                                                            <input type="password" tabindex="1" placeholder="Password" name="actual" id="actual" class="form-control" autofocus="" tabindex="1">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="password">Nueva clave</label>
                                                        <div class="input-group margin-bottom-sm">
                                                            <span class="input-group-addon"><i class="mdi mdi-lock"></i></span>
                                                            <input type="password" tabindex="1" placeholder="Password" name="password" id="password" class="form-control" autofocus="" tabindex="1">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="confirmacion">Confirma tu nueva clave</label>
                                                        <div class="input-group margin-bottom-sm">
                                                            <span class="input-group-addon"><i class="mdi mdi-lock"></i></span>
                                                            <input type="password" tabindex="2" placeholder="Password" name="confirmacion" id="confirmacion" class="form-control" tabindex="2">
                                                        </div>
                                                    </div>
                                                    <div class="form-group m-y-3">
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <a href="{{path('login_perfil_usuario')}}" class="btn btn-block btn-secondary waves-effect waves-light" tabindex="3">
                                                                    <i class="mdi-arrow-left"></i>
                                                                    Cancelar
                                                                </a>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <a href="javascript: void(0)" class="btn btn-block btn-primary waves-effect waves-light" tabindex="4" onclick="submitAjax('login-form', '{{path('login_registrar_cambio_clave_usuario')}}', 2, '')">
                                                                    Guardar clave
                                                                    <i class="mdi-arrow-right"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}